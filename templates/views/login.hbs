<!DOCTYPE html>
<html lang="en">
  
    {{> head }}
  
    <body>

    <div class="d-md-flex flex-row-reverse">
      <div class="signin-right">

        <div class="signin-box">
          <h2 class="slim-logo">UniApp<span>.</span></h2>
          <h2 class="signin-title-primary">Welcome Back!</h2>

        <form action="/applicant/login" method="POST">
          
          <div class="form-group">
            <input type="text" class="form-control" name = "serial" placeholder="Serial Number" required> 
          </div><!-- form-group -->
          <div class="form-group">
            <input type="password" class="form-control" name = "pin" placeholder="Pin" required>
          </div><!-- form-group -->
          <button type="submit" class="btn btn-primary btn-block btn-signin">Sign In</button>
          
        </form>

          <p class="tx-12">&copy; Copyright 2020. All Rights Reserved.</p>
        </div>

      </div><!-- signin-right -->
      <div class="signin-left" style="background-image: url(/img/background.jpg);background-size: cover;">
        <div class="signin-box">
         
        </div>
      </div><!-- signin-left -->
    </div><!-- d-flex -->

     {{> scripts }}

  </body>
</html>
